<resources>

    <!-- Base application theme. -->
    <style name="Wallpee" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

        <!-- Customize your theme here. -->
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Walltip" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- 2. AppTheme.ActionBarTransparent -->

    <style name="AppTheme.ActionBarTransparent" parent="AppTheme.ActionBarTransparentBase"/>

    <!-- base common to all versions, screens, etc. -->
    <style name="AppTheme.ActionBarTransparentBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="displayOptions">homeAsUp</item>
        <item name="actionBarStyle">@style/ActionBarTransparent</item>
    </style>

    <!-- ActionBar styles -->

    <style name="ActionBarTransparent" parent="Base.Widget.AppCompat.ActionBar">
        <item name="background">@android:color/transparent</item>
    </style>

</resources>
