<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_launcher_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.martynaskairys.walltip.LauncherInfoActivity">

    <TextView
        android:text="@string/info_message_regarding_google_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:padding="32dp" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/google_play_logo"
        android:id="@+id/imageView4"
        android:adjustViewBounds="true"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginTop="24dp"
        android:cropToPadding="false"
        android:onClick="linkToPlayStore"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/textView4"
        android:paddingLeft="64dp"
        android:paddingEnd="64dp"
        android:paddingRight="64dp"
        android:paddingStart="64dp"
        />

    <TextView
        android:text="@string/download_link_google_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/google_now_launcher"
        android:id="@+id/imageView5"
        android:adjustViewBounds="true"
        android:onClick="downloadGoogleLauncher"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/textView5" />

    <Button
        android:text="@string/exit_app_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exitApp"
        android:textColor="#8C62CE"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/button2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />
</android.support.constraint.ConstraintLayout>
