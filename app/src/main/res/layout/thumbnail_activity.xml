<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".features.selectcategory.CategoryActivity">


    <TextView
        android:id="@+id/text_explaining_folder_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/make_magic_button_container"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/list_item" />


    <RelativeLayout
        android:id="@+id/make_magic_button_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_explaining_folder_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/button"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_magic_wand_small"
            android:gravity="center"
            android:text="@string/ok_lets_do_it"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>
