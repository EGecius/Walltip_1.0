<resources>

    <!-- 2. AppTheme.ActionBarTransparent -->

    <style name="AppTheme.ActionBarTransparent" parent="AppTheme.ActionBarTransparentBase">
        <item name="android:statusBarColor">@null</item>
    </style>

    <style name="Wallpee" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:statusBarColor">?android:attr/colorForeground</item>
    </style>

    <style name="Walltip" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">?android:attr/colorForeground</item>
    </style>

    <style name="AppCompat.Light.Walltip" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">?android:attr/colorForeground</item>
    </style>

</resources>
